{
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"checkJs": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"moduleResolution": "bundler",
		"module": "esnext",
		"target": "esnext",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*.ts"]
}
