{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte",
				"plugins": [
					"prettier-plugin-svelte"
				]
			}
		},
		{
			"files": "content/**/*.{css,js,svelte}",
			"options": {
				"requirePragma": true
			}
		}
	]
}
